<?xml version="1.0"?>
<launch>
    <!-- Gazebo环境变量设置 -->
    <env name="GAZEBO_MODEL_PATH" value="$(find track)/models:$(optenv GAZEBO_MODEL_PATH)"/>
    <env name="IGN_IP" value="127.0.0.1"/>
    <env name="GAZEBO_RESOURCE_PATH" value="$(find track)/worlds:$(optenv GAZEBO_RESOURCE_PATH)"/>
    <env name="GAZEBO_MODEL_DATABASE_URI" value=""/>
    <env name="LIBGL_ALWAYS_SOFTWARE" value="1"/>
    
    <!-- 加载空白世界 -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find track)/worlds/empty.world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="debug" value="false"/>
        <arg name="verbose" value="false"/>
    </include>

    <!-- 目标车辆 -->
    <group ns="target_car">
        <param name="robot_description" command="$(find xacro)/xacro '$(find track)/urdf/autolabor_mini.urdf.xacro'" />
        <node name="target_spawn_urdf" pkg="gazebo_ros" type="spawn_model" 
            args="-param robot_description -urdf -model target_car 
                  -x 0.0 -y 0.0 -z 0.0 -Y 0.0" />
    </group>

    <!-- 跟踪车辆 -->
    <group ns="track_car">
        <param name="robot_description" command="$(find xacro)/xacro '$(find track)/urdf/autolabor_mini.urdf.xacro'" />
        <node name="track_spawn_urdf" pkg="gazebo_ros" type="spawn_model" 
            args="-param robot_description -urdf -model track_car 
                  -x -2.0 -y 0.0 -z 0.0 -Y 0.0" />
    </group>

    <!-- 启动跟踪控制节点 -->
    <include file="$(find track)/launch/tracking.launch" />
</launch>
