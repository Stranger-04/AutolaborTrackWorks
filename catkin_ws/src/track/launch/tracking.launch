<?xml version="1.0"?>
<launch>
    <!-- 键盘控制节点 -->
    <node name="keyboard_control" pkg="track" type="keyboard_control" output="screen">
        <remap from="cmd_vel" to="/target_car/cmd_vel"/>
    </node>

    <!-- 跟踪节点 -->
    <node name="tracking_node" pkg="track" type="tracking_node" output="screen">
        <param name="max_linear_speed" value="0.5"/>
        <param name="max_angular_speed" value="1.0"/>
        <param name="min_distance" value="0.5"/>
        <param name="desired_distance" value="1.0"/>
        <remap from="cmd_vel" to="/track_car/cmd_vel"/>
        <remap from="target/odom" to="/target_car/odom"/>
        <remap from="odom" to="/track_car/odom"/>
    </node>

    <!-- 添加RViz可视化 -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find track)/rviz/tracking.rviz" output="screen"/>

    <!-- 添加两个机器人的robot_state_publisher -->
    <group ns="target_car">
        <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find autolabor_description)/urdf/autolabor_mini.urdf'"/>
        <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
    </group>

    <group ns="track_car">
        <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find autolabor_description)/urdf/autolabor_mini.urdf'"/>
        <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
    </group>
</launch>
